@model AuthenWithCookies.Models.VMLogin;


@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <form asp-controller="Access" asp-action="Login">
        <h1>Login</h1>
        <input type="email" placeholder="Email" asp-for="Email" />
        <input type="password" placeholder="Password" asp-for="Password"/>
        <label>
            <input type="checkbox" asp-for="KeepLogedIn" />
            Keep me LogIn
        </label>
        <button type="submit">Login In</button>

        @if(ViewData["ValidateMessage"] != null)
        {
            <br />
            <br />
            <label>@ViewData["ValidateMessage"]</label>
        }
    </form>

</body>
</html>
